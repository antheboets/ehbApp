<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesheetApp.Views.LoginPage" Title="Login">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label IsVisible="False" TextColor="Red" x:Name="LoginError">Email of wachtwoord is niet correct !</Label>
            <Label>Email</Label>
            <Entry Placeholder="Email" x:Name="Email"></Entry>
            <Label>Wachtwoord</Label>
            <Entry Placeholder="Wachtwoord" x:Name="Ww"></Entry>
            <Button x:Name="LoginButton" BackgroundColor="#e30713" TextColor="White" Clicked="LoginButtonClicked" Text="Inloggen"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>